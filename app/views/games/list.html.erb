<h1>Games</h1>
<% unless @games.blank? %>
  <ul class='inlinebuttonlist'>
  <% @games.each do |game| %>
    <li>Game between <%= game.player_1.name %> and <%= game.player_2.name %>.<div class="pull-right"><a href="<%= game_start_path(game) %>" class='btn btn-sm btn-success'>Go</a></div></li>
  <% end %>
  </ul>
<% else %>
  <p>You have no current active games.</p>
<% end %>
