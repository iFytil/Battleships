Ocean = function(){

	var shade1 ='#66A3D2';
	var shade2 ='#3F92D2';
	var shade3 ='#254055';
	var shade4 ='#033E6B';

	this.Draw=function(context,w,h)
	{

      var gradient = context.createLinearGradient(w/2, 0, w/2, h);
	gradient.addColorStop(0, shade1);   
	//gradient.addColorStop(1, shade2);
	gradient.addColorStop(1, shade3);
	//gradient.addColorStop(3, shade4);
	context.fillStyle = gradient;
    	  context.fill();
	}

};

Grid = function(n,x,y){

	// square height and width
	var sqw = Math.floor(x/n);
	var sqh= Math.floor(y/n);
	
	this.Draw=function(context,color)
	{	

		for (var i=0; i<n; i++)
		{
		context.beginPath();
		context.moveTo(sqw+i*sqw, 0);
		context.lineTo(sqw+i*sqw, y);
		context.lineWidth = 1;
		context.strokeStyle = color;
		context.stroke();
		}
		for (var i=0; i<n; i++)
		{
		context.beginPath();
		context.moveTo(0, sqh+i*sqh);
		context.lineTo(x, sqh+i*sqh);
		context.lineWidth = 1;
		context.strokeStyle = color;
		context.stroke();
		}
	}
};
