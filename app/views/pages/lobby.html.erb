<script>
	var ready;

ready = function() {
  return window.chatController = new Chat.Controller($('#chat').data('uri'), true);
};

$(document).on('ready page:load', ready);
</script>

<h1>This is the lobby</h1>
<p><%= link_to "view all players", players_path %></p>

<%= content_tag "span", id: "player_data", data: {name: @username} do %>
<% end %>

<div id="chat" class="well" data-uri="<%= request.host %>:<%= request.port %>/websocket">
</div>

<div class="well">
  <fieldset>
    <input type="text" id="message">
    <button id="send" class="btn btn-primary">Send</button>
  </fieldset>
</div>

<div class="well">
  <h3>Active players</h3>
  <ul id="user-list">
    <li>Chat is inactive</li>
  </ul>
</div>